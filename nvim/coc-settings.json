{
  "diagnostic.checkCurrentLine": true,
  "diagnostic.errorSign": "âœ˜",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "?",
  "python.linting.flake8Enabled": true,
  "go.goplsEnv": {
    "GOOS": "js",
    "GOARCH": "wasm"
  },
  "go.goplsOptions": {
    "staticcheck": true
  },
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": [
        "serve"
      ],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    },
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  }
}
